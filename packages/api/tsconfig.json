{
    "compilerOptions": {
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "allowJs": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "lib": ["es2015", "es2020.string"],
        "baseUrl": "./src",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "types": ["express", "body-parser", "node", "ssh2"]
    },
    "include": ["src"]
}
