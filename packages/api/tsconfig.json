{
    "compilerOptions": {
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "allowJs": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "lib": [
            "es2015",
            "es2020.string"
        ],
        "baseUrl": "./",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
    },
    "include": [
        "src/**/*"
    ]
}